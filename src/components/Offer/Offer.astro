---
import OfferCard from "./OfferCard/OfferCard.astro"
import candles_icon from "assets/icons/Offer/candles-icon.svg"
import hands_icon from "assets/icons/Offer/hands-icon.svg"
import foot_icon from "assets/icons/Offer/foot-icon.svg"
import olive_icon from "assets/icons/Offer/olive-icon.svg"
import face_icon from "assets/icons/Offer/face-icon.svg"
import { ROUTES } from "helpers/ROUTES"

const CARDS_CONTENT = [
  {
    image: candles_icon,
    alt: "Ikona świeczek",
    title: "Masaże orientalne",
    description:
      "Odkryj moc głębokiej regeneracji. Nasza terapia dla zmęczonych mięśni przynosi uczucie odnowy i ulgi. Doświadcz ulgi teraz.",
    destination: `${ROUTES.massagesOriental}`
  },
  {
    image: hands_icon,
    alt: "Ikona dłoni i ludzkiego torsu",
    title: "Masaże rozgrzewające",
    description:
      "Delikatne ruchy, które uspokajają Twój umysł. Zanurz się w błogości, odczuj prawdziwy relaks i odprężenie. Magia spokoju.",
    destination: `${ROUTES.massagesWarming}`
  },
  // {
  //   image: foot_icon,
  //   alt: "Ikona dłoni masujących ludzką stopę",
  //   title: "Masaże rozgrzewające",
  //   description:
  //     "Poczuj przyjemne ciepło przenikające w głąb ciała. Idealne dla chłodnych dni. Ulga, rozluźnienie i doskonałe samopoczucie.",
  //   destination: `${ROUTES.massagesWarming}`
  // },
  {
    image: olive_icon,
    alt: "Ikona oliwy",
    title: "Rytuały SPA",
    description:
      "Zbliż się do ukochanej osoby. Razem dzielcie się chwilą relaksu, odprężenia i wzajemnej bliskości. Magia wspólnego spokoju.",
    destination: `${ROUTES.massagesDuo}`
  },
  // {
  //   image: face_icon,
  //   alt: "Ikona rąk masujących ludzką twarz",
  //   title: "Zabiegi na twarz i ciało",
  //   description:
  //     "Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
  //   destination: `${ROUTES.massagesTreatments}`
  // }
]
---

<section class="w-full bg-primary-light p-10 lg:py-32 lg:px-40" id="offer">
  <div class="container mx-auto">
    <h3
      class="text-7xl font-primary font-bold text-button-dark mb-12 text-center md: text"
    >
      Oferta
    </h3>
    <div class="flex flex-wrap justify-center gap-16 xl:gap-0">
      {
        CARDS_CONTENT.map((card, index) => (
          <OfferCard
            image={card.image.src}
            alt={card.alt}
            title={card.title}
            description={card.description}
            destination={card.destination}
          />
        ))
      }
    </div>
  </div>
</section>
