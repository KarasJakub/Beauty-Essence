---
interface Props {
  image: string
  alt: string
  title: string
  description: string
}

const {image, alt, title, description} = Astro.props
import { Image } from "astro:assets";
---

<div class="flex flex-col justify-center items-center">
    <div class="mb-8 max-w-xs">
    <Image src={image} alt={alt} >
    </div>
    <div>
        <h3
        class="text-3xl font-primary font-medium text-button-dark mb-3"
      >
        Nasi pracownicy
      </h3>
      <p class="font-primary text-2xl font-medium text-secondary-text">{description}</p>
    </div>
</div>